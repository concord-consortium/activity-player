{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["jest"],
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2020.Promise",
      "webworker"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
